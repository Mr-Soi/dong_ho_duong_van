@{
  var title = (string?)ViewData["Title"] ?? "Dòng họ Dương Văn";
  var desc  = (string?)ViewData["Description"] ?? title;
  var img   = (string?)ViewData["Image"] ?? Url.Content("~/img/cover.png");
  var url   = (string?)ViewData["Url"] ?? $"{Context.Request.Scheme}://{Context.Request.Host}/";
}
<meta name="description" content="@desc" />
<meta property="og:title" content="@title" />
<meta property="og:description" content="@desc" />
<meta property="og:image" content="@img" />
<meta property="og:url" content="@url" />
<meta property="og:type" content="website" />
<link rel="canonical" href="@url" />
