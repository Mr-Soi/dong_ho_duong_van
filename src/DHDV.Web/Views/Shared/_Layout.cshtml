<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
  <title>@(ViewData["Title"] ?? "Dòng họ Dương Văn")</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous">

  <link rel="icon" type="image/svg+xml" href="~/assets/logo/favicon.svg" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

  @await Html.PartialAsync("_SeoMeta")
</head>
<body>
  <header class="navbar navbar-expand-lg bg-white border-bottom">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
        <img src="~/assets/logo/duongvan_logo_horizontal.svg" class="logo me-2"
            loading="lazy" decoding="async" asp-append-version="true" alt="Dương Văn" />
        <span class="fw-semibold d-none d-sm-inline">Dòng họ Dương Văn</span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <nav id="mainNav" class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" asp-controller="People"  asp-action="Index">Gia phả</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Posts"   asp-action="Index">Bản tin</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Albums"  asp-action="Index">Hình ảnh</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Home"    asp-action="Intro">Giới thiệu</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Home"    asp-action="Charter">Tộc ước</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Home"    asp-action="Contact">Liên hệ</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main class="container my-4">
    @RenderBody()
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
          crossorigin="anonymous"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
@{
  var siteName = "Dòng họ Dương Văn";
  var siteUrl  = "https://donghoduongvan.com";
  var ogImg    = Url.Content("~/img/cover.webp");
  var title    = ViewData["Title"] as string ?? siteName;
}
<meta property="og:type" content="website" />
<meta property="og:site_name" content="@siteName" />
<meta property="og:title" content="@title" />
<meta property="og:url" content="@siteUrl@Context.Request.Path" />
<meta property="og:image" content="@ogImg" />
<meta property="og:locale" content="vi_VN" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="@title" />
<meta name="twitter:image" content="@ogImg" />
<link rel="icon" href="/assets/logo/favicon.svg" type="image/svg+xml" />
<link rel="alternate icon" href="/assets/logo/avatar.webp" />
