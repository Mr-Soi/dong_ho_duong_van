@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Dòng họ Dương Văn";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/css/dhdv.ui.css" />

    <!-- Step 6: Preload logo/cover để tối ưu -->
    <link rel="preload" as="image" href="/assets/logo/duongvan_logo_horizontal.svg" type="image/svg+xml" />
    <link rel="preload" as="image" href="/img/cover.webp" />

    <!-- Step 6: Google Search Console verify (điền mã thật) -->
    <meta name="google-site-verification" content="__PUT_VERIFICATION_CODE__" />

    @RenderSection("Styles", required: false)
</head>
@await Html.PartialAsync("_Nav")

<body>
    <header class="container py-3">
        <a href="/" class="d-flex align-items-center gap-2 text-decoration-none">
            <img src="/assets/logo/duongvan_logo_horizontal.svg" alt="Dương Văn" height="40" />
            <strong>Dòng họ Dương Văn</strong>
        </a>
        <nav class="mt-2">
            <a href="/People">People</a> ·
            <a href="/Albums">Albums</a> ·
            <a href="/Posts">Posts</a>
        </nav>
    </header>

    <main class="container mb-5">
        @RenderBody()
    </main>

    <footer class="container border-top py-3 text-muted">
        © @DateTime.Now.Year Dòng họ Dương Văn
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
