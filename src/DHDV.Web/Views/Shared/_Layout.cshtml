@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Dòng họ Dương Văn";
}
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="x-ua-compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Dòng họ Dương Văn - thông tin gia phả, hình ảnh, bài viết.">
  <meta property="og:title" content="Dòng họ Dương Văn">
  <meta property="og:description" content="Trang thông tin chính thức của dòng họ Dương Văn.">
  <meta property="og:url" content="https://donghoduongvan.com/">
  <meta property="og:type" content="website">
  <meta property="og:image" content="/img/cover.webp">
  <meta name="twitter:card" content="summary_large_image">

  <title>@title</title>
  <link rel="icon" type="image/png" href="~/assets/logo/avatar.webp" />
  <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/dhdv.mobile.css?v=2" />
  <link rel="stylesheet" href="~/css/site.ui-upgrade.css" asp-append-version="true" />

  @RenderSection("Styles", required: false)
</head>
<body>
  <header class="header">
    <div class="container bar">
      <a class="brand" asp-area="" asp-controller="Home" asp-action="Index">
        <img src="~/assets/logo/avatar.webp" alt="DHDV" />
        <span class="t">Dòng họ Dương Văn</span>
      </a>
      <nav class="nav">
        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
        <a asp-controller="People" asp-action="Index">People</a>
        <a asp-controller="Posts" asp-action="Index">Posts</a>
        <a asp-controller="Albums" asp-action="Index">Albums</a>
      </nav>
    </div>
  </header>

  <main class="container">
    @RenderBody()
  </main>

  <footer class="footer">
    <div class="container"> @DateTime.UtcNow.Year Dòng họ Dương Văn</div>
  </footer>

  <script src="~/js/site.min.js" asp-append-version="true"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
