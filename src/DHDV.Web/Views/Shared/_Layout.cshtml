@{
    var title = ViewData["Title"] as string ?? "Dòng họ Dương Văn";
}
<!DOCTYPE html>
<html lang="vi">
@await Html.PartialAsync("_SeoMeta")
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Dòng họ Dương Văn</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <img src="~/assets/logo/duongvan_logo_horizontal.svg" class="logo" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="~/assets/logo/favicon.svg" asp-append-version="true" />

</head>
<body>
    <header class="navbar navbar-expand-lg bg-white border-bottom">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/assets/logo/duongvan_logo_horizontal.svg" alt="Dòng họ Dương Văn" class="logo me-2" />
                <span class="fw-semibold d-none d-sm-inline">Dòng họ Dương Văn</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav id="mainNav" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="People" asp-action="Index">Gia phả</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Posts" asp-action="Index">Bản tin</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Albums" asp-action="Index">Hình ảnh</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
