@model DHDV.Web.Models.PaginationVM
@{
    if (Model is null || Model.TotalPages <= 1) { return; }
    var prev = Model.HasPrev ? (Model.Page - 1) : 1;
    var next = Model.HasNext ? (Model.Page + 1) : Model.TotalPages;
}
<nav class="loadmore-wrap" aria-label="Pagination">
  <a class="pt-sort" asp-route-page="@prev" aria-disabled="@(!Model.HasPrev)">← Trước</a>
  <span class="muted" style="padding:0 .75rem">@Model.Page / @Model.TotalPages</span>
  <a class="pt-sort" asp-route-page="@next" aria-disabled="@(!Model.HasNext)">Sau →</a>
</nav>
