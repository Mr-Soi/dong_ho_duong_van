@model IEnumerable<DHDV.Web.Models.Album>
@{
    ViewData["Title"] = "ThÆ° viá»‡n áº£nh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="mb-3">ThÆ° viá»‡n áº£nh</h3>
<div class="row g-3">
@foreach (var a in Model)
{
  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">@a.Name</h5>
        @if (!string.IsNullOrWhiteSpace(a.Description))
        {
            <p class="card-text">@a.Description</p>
        }
        <div class="d-flex flex-wrap gap-2">
        @if (a.Photos != null)
        {
            foreach (var ph in a.Photos)
            {
                <a href="@ph.Path" target="_blank" rel="noopener">
                  <img src="@ph.Path"
                       class="rounded"
                       style="width:100px;height:100px;object-fit:cover"
                       alt="@ph.Caption" />
                </a>
            }
        }
        </div>
      </div>
    </div>
  </div>
}
</div>


