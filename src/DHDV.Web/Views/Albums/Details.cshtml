@model DHDV.Web.Models.Album
@{
  ViewData["Title"] = Model.Title;
}
<section class="wrap">
  <nav class="breadcrumb">
    <a asp-controller="Albums" asp-action="Index">Albums</a> <span>/</span>
    <span>@Model.Title</span>
  </nav>

  <article class="article">
    <h1>@Model.Title</h1>
    <div class="a-meta">Táº¡o: @Model.CreatedAt:yyyy-MM-dd</div>

    <figure class="hero">
      <img src="@(string.IsNullOrWhiteSpace(Model.CoverUrl) ? Url.Content("~/img/cover.webp") : Model.CoverUrl)"
           alt="@Model.Title" />
      @if (!string.IsNullOrWhiteSpace(Model.Description))
      {
        <figcaption class="muted">@Model.Description</figcaption>
      }
    </figure>
  </article>
</section>
