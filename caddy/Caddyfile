donghoduongvan.com, www.donghoduongvan.com {
  encode zstd gzip
  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    Referrer-Policy "strict-origin-when-cross-origin"
  }

  @static {
    path /img/* /css/* /js/* /favicon.ico /robots.txt
  }
  handle @static {
    file_server
  }

  handle {
    reverse_proxy web:8080
  }

  log {
    output stdout
    format console
    level INFO
  }
}
